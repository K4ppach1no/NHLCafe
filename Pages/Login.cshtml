@page
@model NHLCafe.Pages.LoginModel
@{
}
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="UserName" class="form-control" style="margin-bottom: 10px" />
            </div>
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Password" class="form-control" style="margin-bottom: 10px" />
            </div>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
                <a type="button" class="btn btn-secondary" asp-page="/register">Register</a>
            </div>
            <div class="col-5">
                <label class="text-danger">@Model.Msg</label>
            </div>
        </div>
    </form>
</div>